<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Make Chat</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="socket.io/socket.io.js"></script>
    <script src="/public/index.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.5.0/moment.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href='https://cdnjs.cloudflare.com/ajax/libs/flexboxgrid/6.3.1/flexboxgrid.min.css'></link>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous"/>
    <link href='/public/index.css' rel='stylesheet' type='text/css'></link>
  </head>
  <body>
    <div class="makechat-container">
    <div id="login-container" class="row h-100 justify-content-center align-items-center">
      <form id="username-form" class="username-form">
        <h3 style="text-align: center; color: white">Sign In</h3>
        <p style="color:white">Welcome to MakeChat</p>
          <div class="form-group">
            <label style="color:white">Username</label>
            <input id="username-input" class="form-control">
          </div>
        <button id="create-user-btn">Join Chat</button>
      </form>
    </div>
    <div id="main-container" class="main-container is-hidden">
      <div class="channel-chat-container"></div>
        <nav class="navbar navbar-dark" id="collapse">
          <a class="navbar-brand" href="#">Make Chat</a>
          <form class="form-inline my-2 my-lg-0">
            <button class="btn" id="sign-out">Sign Out</button>
          </form>
        </nav>
      <div class="container-fluid">
        <div class="row">
          <div class="col-3 channels-and-users-online-container">
              <div class="d-flex flex-nowrap">
                  <h5 class="fas fa-comments"></h5>
                  <h5 class="label">Channels</h5>
              </div>
              <div class="new-channel-form input-group mb-3">
                <input type="text" id="new-channel-input" class="form-control" placeholder="New channel" aria-describedby="button-addon2">
                <div class="input-group-append">
                  <button class="btn btn-outline-secondary" type="button" id="new-channel-btn">Create</button>
                </div>
              </div>
              <div class="channels custom-scrollbar">
                <div class="channel-current">General</div>
              </div>
              <div class="d-flex flex-nowrap">
                <h5 class="fas fa-users"></h5>
                <h5 class="label">Online Users</h5>
              </div>
              <div class="users-online custom-scrollbar"></div>
            
          </div>
          <div class="col-9 chat-container">
            <div class="chat-container-fluid">
              <div class="message-container custom-scrollbar"></div>
            </div>
          </div>
          <div class="input-box">
            <div class="feedback"></div>
            {{!-- <div class="text-chat-divide"></div> --}}
            {{!-- <div class="chat-box">
              <textarea id="chat-input" placeholder="Type a message"></textarea>
              <button class="btn fas fa-paper-plane" id="send-chat-btn"></button>
            </div> --}}

            <div class="chat-box input-group">
              <textarea id="chat-input" placeholder="Enter a message" class="form-control" aria-describedby="button-addon2"></textarea>
              <div class="input-group-append">
                <button class="btn fas fa-paper-plane" id="send-chat-btn" type="button"></button>
              </div>
            </div>

            {{!-- <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Button</button>
              </div>
            </div> --}}
          </div>
        </div>
      </div>
    </div>
  </div>
  
  </body>
</html>